<Grid
    x:Class="MyNsTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="600" Height="120">
    <Grid.Resources>
        <DataModel3 x:Name="dataModel" />
        <DataTemplate x:Key="TaskTemplate">
		  <Grid>
			<Grid.RowDefinitions>
			     <RowDefinition Height="80"/>
				 <RowDefinition Height="20"/>
			</Grid.RowDefinitions>	 
            <Button Width="100" Height="80" Grid.Row="0">
			   <Image Source="{Binding ImageName}" Stretch="Fill"/>
            </Button>
			<Button Content="{Binding Name}" Width="100" Height="20" Foreground="White" Grid.Row="1">
            </Button>
	      </Grid>
        </DataTemplate>
    </Grid.Resources>
    <ListBox Height="120" DataContext="{StaticResource dataModel}"
        ItemsSource="{Binding Players}"
        ItemTemplate="{StaticResource TaskTemplate}">
        <ListBox.ItemsPanel>
    <ItemsPanelTemplate>
    <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
    </ItemsPanelTemplate>
    </ListBox.ItemsPanel>
    </ListBox>
</Grid>