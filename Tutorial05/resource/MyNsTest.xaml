<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="MyNsTest">
  
	<Grid.Resources>
		<ResourceDictionary>
			<Style x:Key="ImageCellStyle" TargetType="{x:Type Label}">
				<Setter Property="Width" Value="30"/>
				<Setter Property="Height" Value="30"/>
				<Setter Property="BorderThickness" Value="1"/>
				<setter Property="Background" Value="Green"/>
			</Style>
		</ResourceDictionary>
	</Grid.Resources>
  

	  <Border Width="500" Height="80" BorderThickness="1,1,1,1" BorderBrush="#99999999" >
	      <ScrollViewer Background="#55aabb11" BorderThickness="1"  Width="300"  BorderBrush="Black" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        	<StackPanel x:Name="diffusePicPanel" Orientation="Horizontal" HorizontalAlignment="Center"/>
       </ScrollViewer>
      </Border>

</Grid>