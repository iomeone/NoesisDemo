<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="MyNsTest"
  x:Name="mainGrid">
 <Grid.Resources>
		<ResourceDictionary>
			<Style x:Key="ImageCellStyle" TargetType="{x:Type Button}">
				<Setter Property="Width" Value="80"/>
				<Setter Property="Height" Value="80"/>
				<Setter Property="BorderThickness" Value="1"/>
				<Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="shenjian.png" Stretch="Fill"/>
            </Setter.Value>
</Setter>
			</Style>
		</ResourceDictionary>
	</Grid.Resources>
	  <Border Width="800" Height="100" BorderThickness="1,1,1,1" BorderBrush="#99999999" >
	      <ScrollViewer Background="#55aabb11" BorderThickness="1"  Width="720"  BorderBrush="Black" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        	<StackPanel x:Name="panel" Orientation="Horizontal" HorizontalAlignment="Center"/>
       </ScrollViewer>
     </Border>

</Grid>